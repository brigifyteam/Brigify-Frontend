        "post": {
          "summary": "Create a new job posting (Employers only)",
          "tags": [
            "Jobs"
          ],
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "title",
                    "company",
                    "location",
                    "type",
                    "experienceLevel",
                    "description",
                    "postedBy"
                  ],
                  "properties": {
                    "title": {
                      "type": "string",
                      "example": "Senior UX Designer"
                    },
                    "company": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string",
                          "example": "TechFlow Solutions"
                        },
                        "logo": {
                          "type": "string"
                        },
                        "description": {
                          "type": "string"
                        },
                        "isVerified": {
                          "type": "boolean"
                        }
                      }
                    },
                    "location": {
                      "type": "string",
                      "example": "San Francisco, CA (Remote)"
                    },
                    "type": {
                      "type": "string",
                      "enum": [
                        "full-time",
                        "part-time",
                        "contract",
                        "freelance",
                        "internship"
                      ]
                    },
                    "experienceLevel": {
                      "type": "string",
                      "example": "Mid-Senior Level"
                    },
                    "salary": {
                      "type": "string",
                      "example": "$90k - $120k / yr"
                    },
                    "description": {
                      "type": "string"
                    },
                    "responsibilities": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "requirements": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "skills": {
                      "type": "object",
                      "properties": {
                        "required": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          },
                          "example": [
                            "Figma",
                            "User Research",
                            "Wireframing"
                          ]
                        },
                        "niceToHave": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          },
                          "example": [
                            "HTML/CSS",
                            "Motion Design"
                          ]
                        }
                      }
                    },
                    "postedBy": {
                      "type": "string",
                      "description": "User ID of the employer"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Job created successfully"
            },
            "400": {
              "description": "Missing required fields"
            }
          }
        }
      },
