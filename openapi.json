      "/landing/how-it-works": {
        "get": {
          "summary": "Get \"How It Works\" content for landing page",
          "tags": [
            "Landing"
          ],
          "responses": {
            "200": {
              "description": "How it works content retrieved successfully",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "title": {
                        "type": "string",
                        "example": "Your 5-Step Path to Success"
                      },
                      "subtitle": {
                        "type": "string"
                      },
                      "videoUrl": {
                        "type": "string"
                      },
                      "videoDuration": {
                        "type": "string"
                      },
                      "steps": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "step": {
                              "type": "number"
